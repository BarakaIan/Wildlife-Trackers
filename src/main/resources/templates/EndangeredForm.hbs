{{#partial "content"}}
    <body style="background: url('../Images/zdenek-machacek-UxHol6SwLyM-unsplash.jpg');
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;');">
{{#partial "title"}}
    Hello! Report on the Endangered Animal
{{/partial}}

    <form action="/report"   method="post" style="color:white;">
        <div class="form-group">
            <label for="name">Name of the Animal:{{animalName}}</label>
            <input id="name" name="name" class="form-control" type="text" required>
        </div>
        <div class="form-group">
            <label for="age">Health: {{health}}</label>
            <select id="health" name="health" type="text" class="form-control">
                <option value=""></option>
                <option value="healthy">Healthy</option>
                <option value="ill">Ill</option>
                <option value="okay">Okay</option>
            </select>
        </div>
        <div class="form-group">
            <label for="age">Age: {{age}}</label>
            <select id="age" name="age" type="text" class="form-control">
                <option value=""></option>
                <option value="Newborn">Newborn</option>
                <option value="Young">Young</option>
                <option value="Adult">Adult</option>
            </select>
        </div>


        <button class="btn btn-success" href="/SuccessDanger" type="submit"> Submit</button>

    </form>
    </body>
{{/partial}}

